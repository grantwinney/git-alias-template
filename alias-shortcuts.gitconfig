[alias]
  co = checkout
  cob = checkout -b
  ci = commit
  ec = config --global --edit
  st = status
  br = branch
  df = diff
  re = checkout .
  rclone = clone --recursive

  # recursively pull repo and its submodule (if any)
  rpull = !git pull && git submodule update --recursive

  # a graph view of a project's history
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  hsit = !git hist

  # add and commit changes, with a message or without
  ac = !git add . && git commit -m \"$1\" && :
  acnc = !git add . && git commit --allow-empty-message -m \"\"

  # add and commit AND PUSH changes, with a message or without
  shove = !git add . && git commit -m \"$1\" && git push && :
  shovenc = !git add . && git commit --allow-empty-message -m \"\" && git push

  # display your currently defined aliases
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

  # pass in the name or email address of someone involved with the project
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
