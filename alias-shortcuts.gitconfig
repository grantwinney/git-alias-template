[alias]
  co = checkout
  cob = checkout -b
  ci = commit
  ec = config --global --edit
  st = status
  br = branch
  re = checkout .
  rclone = clone --recursive
  rpull = !git pull && git submodule update
  
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

  shove = !git add . && git commit -m \"$1\" && git push && :
  ncshove = !git add . && git commit --allow-empty-message -m \"\" && git push
